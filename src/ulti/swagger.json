        },
        "avatar": {
          "type": "string",
          "example": "http://example.com/avatar.jpg"
        },
        "position": {
          "type": "string",
          "example": "Manager"
        },
        "department": {
          "type": "string",
          "example": "Human Resources"
        }
      }
    },
    "ErrorResponse": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "Đã xảy ra lỗi khi tạo người dùng mới"
        }
      }
    },
    "ReportDownload": {
      "type": "object",
      "required": ["date"],
      "properties": {
        "date": {
          "type": "string",
          "format": "date",
          "example": "2023-09-15"
        },
        "note": {
          "type": "string",
          "example": "Ghi chú cho báo cáo"
        }
      }
    },
    "Login": {
      "type": "object",
      "required": ["username", "password"],
      "properties": {
        "username": {
          "type": "string",
          "example": "user123"
        },
        "password": {
          "type": "string",
          "example": "p@ssw0rd"
        }
      }
    },
    "Report": {
      "type": "object",
      "properties": {
        "report": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ReportDetail"
          }
        },
        "note": {
          "type": "string",
          "example": "Ghi chú cho báo cáo"
        }
      }
    },
    "InputReport": {
      "type": "object",
      "required": ["idUser", "date", "today", "tomorrow"],
      "properties": {
        "idUser": {
          "type": "string",
          "example": "5f8d04b3bcfd1312d4a1c8b1"
        },
        "date": {
          "type": "string",
          "format": "date",
          "example": "2023-09-15"
        },
        "today": {
          "type": "string",
          "example": "Hoàn thành công việc X"
        },
        "tomorrow": {
          "type": "string",
          "example": "Bắt đầu công việc Y"
