{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Report_work API",
    "description": "API for managing reports, users, and authentication."
  },
  "host": "report-work.onrender.com",
  "tags": [
    {
      "name": "User",
      "description": "Operations related to users"
    },
    {
      "name": "Export",
      "description": "Operations related to exporting reports"
    },
    {
      "name": "Authentication",
      "description": "Operations related to user authentication"
    },
    {
      "name": "Report",
      "description": "Operations related to reports"
    }
  ],
  "securityDefinitions": {
    "Bearer": {
      "type": "apiKey",
      "description": "JWT Authorization header using the Bearer scheme. Enter 'Bearer' [space] and then your token in the text input below. Example: 'Bearer 12345abcdef'",
      "name": "Authorization",
      "in": "header"
    }
  },
  "security": [
    {
      "Bearer": []
    }
  ],
  "paths": {
    "/user/create": {
      "post": {
        "summary": "Create a new user",
        "tags": ["User"],
        "description": "API to create a new user by an admin.",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "User information to create",
            "required": true,
            "schema": {
              "$ref": "#/definitions/UserInput"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "New user created successfully.",
            "schema": {
              "$ref": "#/definitions/UserResponse"
            }
          },
          "409": {
            "description": "Username already exists.",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "500": {
            "description": "Server error when creating a new user.",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/export/download": {
      "post": {
        "summary": "Export report",
        "tags": ["Export"],
        "description": "Admin exports a report",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Date and optional note for the report to be exported",
            "required": true,
            "schema": {
              "$ref": "#/definitions/ReportDownload"
            }
          }
        ],
        "produces": [
          "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"
        ],
        "responses": {
          "200": {
            "description": "Excel file downloaded successfully",
            "schema": {
              "type": "file"
            }
          },
          "404": {
            "description": "No reports found for this date."
          },
          "500": {
            "description": "Error while generating report."
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Login",
        "tags": ["Authentication"],
        "description": "User login",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Credentials required for login",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Login"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Logged in successfully",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 200
                },
                "message": {
                  "type": "string",
                  "example": "Đăng nhập thành công"
                },
                "token": {
                  "type": "string",
                  "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                },
                "data": {
                  "$ref": "#/definitions/User"
                }
              }
            }
          },
          "404": {
            "description": "User not found.",
            "schema": {
              "type": "string",
              "example": "Không tìm thấy người dùng"
            }
          },
          "500": {
            "description": "Error during login or password comparison",
            "schema": {
              "type": "string",
              "example": "lỗi khi so sánh mật khẩu hoặc lỗi server"
            }
          }
        }
      }
    },
    "/export": {
      "get": {
        "summary": "View report",
        "tags": ["Export"],
        "description": "View report information",
        "parameters": [
          {
            "name": "date",
            "in": "query",
            "description": "Date for the report in format YYYY-MM-DD",
            "required": false,
            "type": "string",
            "format": "date",
            "example": "2023-09-15"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Report information retrieved successfully",
            "schema": {
              "$ref": "#/definitions/Report"
            }
          },
          "500": {
            "description": "Server error when searching for report."
          }
        }
      }
    },
    "/report/input": {
      "post": {
        "summary": "Submit report",
        "tags": ["Report"],
        "description": "User submits a report",
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Information of the report",
            "required": true,
            "schema": {
              "$ref": "#/definitions/InputReport"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Report submitted successfully",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Báo cáo đã được lưu"
                },
                "report": {
                  "$ref": "#/definitions/ReportDetail"
                }
              }
            }
          },
          "500": {
            "description": "Server error when submitting report.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "lỗi sever"
                },
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/report": {
      "get": {
        "summary": "Form submit report",
        "tags": ["Report"],
        "description": "User retrieves a report",
        "parameters": [
          {
            "name": "date",
            "in": "query",
            "description": "Date of the report in format YYYY-MM-DD",
            "required": false,
            "type": "string",
            "format": "date",
            "example": "2023-09-15"
          },
          {
            "name": "idUser",
            "in": "query",
            "description": "User's ID",
            "required": false,
            "type": "string",
            "example": "5f8d04b3bcfd1312d4a1c8b1"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Report form retrieved successfully",
            "schema": {
              "$ref": "#/definitions/ReportDetail"
            }
          },
          "500": {
            "description": "Server error when retrieving report form."
          }
        }
      }
    },
    "/user": {
      "get": {
        "summary": "Get all users",
        "tags": ["User"],
        "description": "Retrieve all user information",
        "responses": {
          "200": {
            "description": "All user information retrieved successfully",
            "schema": {
              "$ref": "#/definitions/AllUser"
            }
          },
          "500": {
            "description": "Server error."
          }
        }
      }
    },
    "/user/edit": {
      "put": {
        "summary": "Edit user",
        "tags": ["User"],
        "description": "Edit user information",
        "parameters": [
          {
            "in": "body",
            "name": "user",
            "description": "User information to be edited",
            "required": true,
            "schema": {
              "$ref": "#/definitions/EditUser"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "User information edited successfully",
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "$ref": "#/definitions/UserDetail"
                },
                "message": {
                  "type": "string",
                  "example": "Cập nhật người dùng thành công"
                }
              }
            }
          },
          "500": {
            "description": "Server error when editing user information.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "lỗi sever"
                }
              }
            }
          }
        }
      }
    },
    "/user/detail": {
      "get": {
        "summary": "User's information",
        "tags": ["User"],
        "description": "Retrieve user's detailed information",
        "parameters": [
          {
            "name": "idUser",
            "in": "query",
            "description": "User's ID to retrieve detailed information",
            "required": true,
            "type": "string",
            "example": "5f8d04b3bcfd1312d4a1c8b1"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "User's information displayed successfully",
            "schema": {
              "$ref": "#/definitions/UserDetail"
            }
          },
          "500": {
            "description": "Server error when displaying user's information.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "lỗi sever"
                }
              }
            }
          }
        }
      }
    },
    "/report/edit": {
      "put": {
        "summary": "Edit report",
        "tags": ["Report"],
        "description": "Edit report information",
        "parameters": [
          {
            "in": "body",
            "name": "report",
            "description": "Report information to be edited",
            "required": true,
            "schema": {
              "$ref": "#/definitions/EditReport"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Report edited successfully",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Báo cáo đã được lưu"
                },
                "report": {
                  "$ref": "#/definitions/ReportDetail"
                }
              }
            }
          },
          "500": {
            "description": "Server error when editing report.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "lỗi sever"
                },
                "error": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/export/update": {
      "put": {
        "summary": "Update note",
        "tags": ["Export"],
        "description": "Admin updates a note",
        "parameters": [
          {
            "in": "body",
            "name": "note",
            "description": "Note information to be updated",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Note"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Note updated successfully",
            "schema": {
              "type": "object",
              "properties": {
                "updatedNote": {
                  "$ref": "#/definitions/Note"
                },
                "message": {
                  "type": "string",
                  "example": "Cập nhật note thành công"
                }
              }
            }
          },
          "500": {
            "description": "Server error when updating note.",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Lỗi khi cập nhật note"
                }
              }
            }
          }
        }
      }
    }
  },

  "definitions": {
    "UserInput": {
      "type": "object",
      "required": ["username", "password", "name", "role"],
      "properties": {
        "username": {
          "type": "string",
          "example": "user123"
        },
        "password": {
          "type": "string",
          "example": "p@ssw0rd"
        },
        "name": {
          "type": "string",
          "example": "Nguyen Van A"
        },
        "role": {
          "type": "string",
          "example": "admin"
        },
        "msnv": {
          "type": "string",
          "example": "ckd001"
        },
        "avatar": {
          "type": "string",
          "example": "http://example.com/avatar.jpg"
        }
      }
    },
    "UserResponse": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "example": "user123"
        },
        "name": {
          "type": "string",
          "example": "Nguyen Van A"
        },
        "role": {
          "type": "string",
          "example": "admin"
        },
        "msnv": {
          "type": "string",
          "example": "ckd001"
        },
        "avatar": {
          "type": "string",
          "example": "http://example.com/avatar.jpg"
        }
      }
    },
    "ErrorResponse": {
      "type": "object",
      "properties": {
        "message": {
          "type": "string",
          "example": "An error occurred while creating a new user"
        }
      }
    },
    "ReportDownload": {
      "type": "object",
      "required": ["date"],
      "properties": {
        "date": {
          "type": "string",
          "format": "date",
          "example": "2023-09-15"
        },
        "note": {
          "type": "string",
          "example": "Ghi chú cho báo cáo"
        }
      }
    },
    "Login": {
      "type": "object",
      "required": ["username", "password"],
      "properties": {
        "username": {
          "type": "string",
          "example": "user123"
        },
        "password": {
          "type": "string",
          "example": "p@ssw0rd"
        }
      }
    },
    "Report": {
      "type": "object",
      "properties": {
        "report": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ReportDetail"
          }
        },
        "note": {
          "type": "string",
          "example": "Ghi chú cho báo cáo"
        }
      }
    },
    "InputReport": {
      "type": "object",
      "required": ["idUser", "date", "today", "tomorrow"],
      "properties": {
        "idUser": {
          "type": "string",
          "example": "5f8d04b3bcfd1312d4a1c8b1"
        },
        "date": {
          "type": "string",
          "format": "date",
          "example": "2023-09-15"
        },
        "today": {
          "type": "string",
          "example": "Hoàn thành công việc X"
        },
        "tomorrow": {
          "type": "string",
          "example": "Bắt đầu công việc Y"
        }
      }
    },
    "ReportDetail": {
      "type": "object",
      "properties": {
        "date": {
          "type": "string",
          "example": "2023-09-15"
        },
        "idUser": {
          "type": "string",
          "example": "5f8d04b3bcfd1312d4a1c8b1"
        },
        "today": {
          "type": "string",
          "example": "Hoàn thành công việc X"
        },
        "tomorrow": {
          "type": "string",
          "example": "Bắt đầu công việc Y"
        },
        "name": {
          "type": "string",
          "example": "Nguyen Van A"
        },
        "msnv": {
          "type": "string",
          "example": "ckd001"
        }
      }
    },
    "AllUser": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/UserDetail"
      }
    },
    "UserDetail": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "example": "user123"
        },
        "name": {
          "type": "string",
          "example": "Nguyen Van A"
        },
        "role": {
          "type": "string",
          "example": "admin"
        },
        "msnv": {
          "type": "string",
          "example": "ckd001"
        },
        "avatar": {
          "type": "string",
          "example": "http://example.com/avatar.jpg"
        }
      }
    },
    "EditUser": {
      "type": "object",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "example": "5f8d04b3bcfd1312d4a1c8b1"
        },
        "role": {
          "type": "string",
          "example": "admin"
        },
        "name": {
          "type": "string",
          "example": "Nguyen Van A"
        },
        "username": {
          "type": "string",
          "example": "user123"
        },
        "password": {
          "type": "string",
          "example": "newpassword"
        },
        "status": {
          "type": "string",
          "example": "active"
        }
      }
    },
    "EditReport": {
      "type": "object",
      "required": ["idUser", "date", "today", "tomorrow"],
      "properties": {
        "idUser": {
          "type": "string",
          "example": "5f8d04b3bcfd1312d4a1c8b1"
        },
        "date": {
          "type": "string",
          "format": "date",
          "example": "2023-09-15"
        },
        "today": {
          "type": "string",
          "example": "Hoàn thành công việc X"
        },
        "tomorrow": {
          "type": "string",
          "example": "Bắt đầu công việc Y"
        }
      }
    },
    "Note": {
      "type": "object",
      "required": ["note"],
      "properties": {
        "note": {
          "type": "string",
          "example": "Thông tin quan trọng cần cập nhật"
        }
      }
    }
  }
}
